{
  "id": "com.elmatica.hdl-smartbus",
  "version": "0.0.1",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "HDL Smartbus"
  },
  "description": {
    "en": "Support for HDL Smartbus"
  },
  "category": ["lights"],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Max Brosnahan",
    "email": "maximilian.brosnahan@gmail.com"
  },
  "drivers": [
    {
      "id": "montionsensor",
      "name": {
        "en": "montionsensor"
      },
      "class": "sensor",
      "capabilities": ["alarm_motion"],
      "images": {
        "large": "/drivers/montionsensor/assets/images/large.png",
        "small": "/drivers/montionsensor/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}
